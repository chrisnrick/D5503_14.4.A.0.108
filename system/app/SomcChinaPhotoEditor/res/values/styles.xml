<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Crop">
        <item name="android:layoutDirection">locale</item>
    </style>
    <style name="FilterShowHistoryButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:typeface">sst</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filtershow_button_background</item>
        <item name="android:padding">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="FilterShowTopButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:typeface">sst</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filtershow_button_background</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="FilterShowBottomButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:typeface">sst</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filtershow_button_background</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:layout_width">96.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="Theme.GalleryBase" parent="@android:style/Theme.DeviceDefault">
        <item name="android:typeface">sst</item>
        <item name="listPreferredItemHeightSmall">48.0dip</item>
        <item name="switchStyle">@android:style/Widget.CompoundButton</item>
    </style>
    <style name="Theme.Gallery" parent="@style/Theme.GalleryBase">
        <item name="android:colorBackground">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:actionBarStyle">@style/Holo.ActionBar</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Theme.FilterShow" parent="@style/Theme.Gallery">
        <item name="android:windowBackground">@color/background_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layoutDirection">locale</item>
    </style>
    <style name="Holo.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:typeface">sst</item>
        <item name="android:background">@drawable/actionbar_translucent</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:backgroundStacked">@null</item>
    </style>
    <style name="TextSizeDialog">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/text_list_item_padding_left</item>
        <item name="android:layout_width">@dimen/text_toolbar_size_item_width</item>
        <item name="android:layout_height">@dimen/text_toolbar_size_list_item_height</item>
        <item name="android:layout_marginLeft">@dimen/text_list_item_bg_margin</item>
        <item name="android:layout_marginRight">@dimen/text_list_item_bg_margin</item>
    </style>
    <style name="TextFontDialog">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/text_list_item_padding_left</item>
        <item name="android:layout_width">@dimen/text_toolbar_font_item_width</item>
        <item name="android:layout_height">@dimen/text_toolbar_font_list_item_height</item>
        <item name="android:layout_marginLeft">@dimen/text_list_item_bg_margin</item>
        <item name="android:layout_marginRight">@dimen/text_list_item_bg_margin</item>
    </style>
    <style name="FullscreenToolView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="EffectsMenuScrollView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ActionBarLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="EffectsMenuContainer" parent="@style/ActionBarLinearLayout">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">ltr</item>
    </style>
    <style name="ActionBarImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="ImageActionButton" parent="@style/ActionBarImageView">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/action_button_padding_vertical</item>
        <item name="android:paddingRight">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/action_button_padding_vertical</item>
    </style>
    <style name="EffectsMenuActionButton" parent="@style/ImageActionButton">
        <item name="android:textSize">@dimen/effect_label_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/photoeditor_toggle_button_background</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingTop">@dimen/effects_menu_padding_top_bottom</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">@dimen/effects_menu_padding_top_bottom</item>
        <item name="android:layout_width">@dimen/effects_menu_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ImageRedoButton" parent="@style/ImageActionButton">
        <item name="android:src">@drawable/menu_redo</item>
    </style>
    <style name="ImageUndoButton" parent="@style/ImageActionButton">
        <item name="android:src">@drawable/menu_undo</item>
    </style>
    <style name="CollageEffectsMenuContainer" parent="@style/EffectsMenuContainer">
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>
